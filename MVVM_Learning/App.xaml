<Application x:Class="MVVM_Learning.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVM_Learning"
             xmlns:vm="clr-namespace:MVVM_Learning.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/BaseResources/Brushes.xaml"></ResourceDictionary>

                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/GridSplitters.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <vm:ViewModelLocator x:Key="Locator"></vm:ViewModelLocator>
        </ResourceDictionary>

    </Application.Resources>
</Application>
