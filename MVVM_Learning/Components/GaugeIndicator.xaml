<UserControl x:Class="MVVM_Learning.Components.GaugeIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Learning.Components"
             
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Path Stroke="GreenYellow" StrokeThickness="2" Data="M 0,2 L 50,50"/>


        <Viewbox>
            <Grid Width="100" Height="100">
                <Line Stroke="Red" StrokeThickness="3" X1="10" X2="60" Y1="40" Y2="60"></Line>

            </Grid>
        </Viewbox>
    </Grid>

    
</UserControl>
