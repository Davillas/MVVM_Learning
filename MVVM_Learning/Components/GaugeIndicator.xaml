<UserControl x:Class="MVVM_Learning.Components.GaugeIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Learning.Components"
             
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <!--<Path Stroke="GreenYellow" StrokeThickness="2" Data="M 0,2 L 50,50"/>-->


        <Viewbox>
            <Grid Width="100" Height="100">
                <Line Stroke="Red" StrokeThickness="3"
                      X1="50" X2="50"
                      Y1="80" Y2="20"
                      RenderTransformOrigin="0.5,0.8">

                    <Line.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="-50"/>
                            <RotateTransform Angle="{Binding Value, RelativeSource={RelativeSource AncestorType=local:GaugeIndicator}}"  
                                             x:Name="IndicatorRotator"/>
                        </TransformGroup>
                    </Line.RenderTransform>
                </Line>

            </Grid>
        </Viewbox>
    </Grid>

    
</UserControl>
